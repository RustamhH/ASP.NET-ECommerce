@model List<Category>

<div class="d-flex container row">
    @foreach (var item in Model)
    {
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">@item.Name</h5>
                <h6 class="card-subtitle mb-2 text-muted">@item.Products</h6>
            </div>
        </div>
    }
</div>